# Environment variables for voice command demo
# Copy this to .env and fill in your values

# Wake word to listen for (default: "ai")
WAKE_WORD=ai

# Whisper model size (base, small, medium, large)
WHISPER_MODEL=base

# Silence threshold in milliseconds for VAD
SILENCE_MS=900

# Maximum utterance length in seconds
MAX_UTTERANCE_S=10

# Minimum segment length in milliseconds (ignore shorter)
MIN_SEGMENT_MS=300